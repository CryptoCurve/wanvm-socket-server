{
    "compilerOptions": {
        "module": "none",
        "noImplicitAny": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "dist",
        "target": "es2015",
        "types": ["node"],
        "typeRoots": ["node_modules/@types"]
    },
    "include": [
        "node_modules/@types/**/*.d.ts",
        "types/**/*.d.ts",
        "src/**/*.ts"
    ]
}