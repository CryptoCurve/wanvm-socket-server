{
    "compilerOptions": {
        "module": "none",
        "noImplicitAny": true,
        "removeComments": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "dist",
        "target": "es6",
        "types": ["node"],
        "noImplicitAny": false,
        "typeRoots": ["node_modules/@types"]
    },
    "include": [
        "node_modules/@types/**/*.d.ts",
        "types/**/*.d.ts",
        "src/**/*.ts",
        "typings/**/*.d.ts",
    ]
}